server {
    location / {
        if ($http_referer ~* "/api/user/") {
            return 307 $scheme://$http_host/api/user/$request_uri;
        }
        if ($http_referer ~* "/api/") {
            return 307 $scheme://$http_host/api/$request_uri;
        }

        root /www/frontend;
        index index.html;
    }

    location /api/ {
        index /;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_pass http://calculator:8080/;
    }

    location /api/user/ {
        index /;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_pass http://auth:8081/;
    }

    location /admin/ {
        proxy_pass http://adminfront:${ADMIN_FRONT_PORT};

        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_intercept_errors on;
        proxy_next_upstream error timeout invalid_header http_500 http_502 http_503 http_504;
        error_page 502 503 504 =404 /404.html;

        proxy_buffering off;
    }
}
